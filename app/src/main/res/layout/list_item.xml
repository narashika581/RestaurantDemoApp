<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border">

    <androidx.cardview.widget.CardView
        android:id="@+id/profileCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/golden"
        app:cardElevation="0.5dp"
        app:cardUseCompatPadding="true"
        android:focusable="true"
        app:contentPadding="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/foodPhoto"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="10sp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_topfoodie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10sp" />



    <LinearLayout
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurantTiming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="Timings"
            android:textSize="14sp"
            android:visibility="visible"
            tools:visibility="visible" />
        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:text="Restaurant Name"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/restaurantAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:text="Address"
            android:textColor="#4A575C"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/restaurantCuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:text="Cuisine"
            android:textColor="#4A575C"
            android:textSize="14sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/restaurantRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:text="Rating"
            android:background="@drawable/rounded_textview"
            android:gravity="right"
            android:layout_gravity="right"
            android:padding="4sp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16sp"
            android:src="@drawable/ic_blue_bookmark"
            android:layout_gravity="right|bottom"
            android:foregroundGravity="bottom"
            android:layout_marginTop="60sp"
            android:layout_marginEnd="8sp"
            android:layout_marginRight="8sp" />
    </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>